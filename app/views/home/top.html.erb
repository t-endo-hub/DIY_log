<div class="row">
	<ul class="tag-bar">
		<li>
			人気のタグ
		</li>
		<li>
			<%= link_to '椅子', posts_path(tag_name: "椅子")  %>
		</li>
		<li>
			<%= link_to 'テーブル', posts_path(tag_name: "テーブル")  %>
		</li>
		<li>
			<%= link_to '壁紙', posts_path(tag_name: "壁紙")  %>
		</li>
		<li>
			<%= link_to '簡単', posts_path(tag_name: "簡単")  %>
		</li>
	</ul>
</div>
<div class="main-image">
	<div class="main-image-box">
		<div class="main-image-box-text">
			<%= link_to home_about_path do %>
				<h1 class="main-text">WHAT<br> DIY<br> LOG?</h1>
			<% end %>
			<span class = "registration-btn">
				<%= link_to new_user_registration_path do %>
					<i class="fas fa-hiking fa-2x registration-logo"></i>sign up!
				<% end %>
			</span>
		</div>
	</div>
</div>


<div style="background-color: #f2f2f2">
<div class="container">
<div class="a">
<% @posts.each do |post| %>
  <div class="col-md-4">
    <div class="card-wrap">
      <div class="card test">
        <div class="card-header align-items-center d-flex">
          <%= link_to user_path(post.user), class: "no-text-decoration" do %>
            <%= attachment_image_tag post.user,:image,class: "post-profile-icon" %>
          <% end %>
          <%= link_to user_path(post.user), class: "black-color no-text-decoration",title: post.user.name do %>
            <strong><%= post.user.name %></strong>
          <% end %>
        </div>

        <%= link_to(post_path(post)) do %>
          <%= attachment_image_tag post,:image, class: "card-img-top", fallback: "no_image.jpg" %>
          <div class="card-body">
            <h5><strong><%= post.title %></strong></h5>
            <div class="row parts">
              <% if user_signed_in? %>
                <div class="like_<%= post.id %>">
                  <%= render "/posts/like_text", post: post %>
                </div>
              <% end %>
            </div>
            <div>
              <span><strong><%= post.user.name %></strong></span>
              <%= link_to time_ago_in_words(post.created_at).upcase + "前", post_path(post), class: "post-time no-text-decoration" %>
             
              <%= link_to time_ago_in_words(post.created_at).upcase + "前", post_path(post), class: "light-color post-time    no-text-decoration" %>
              <hr>
              <div class="row actions" id="comment-form-post-<%= post.id.to_s %>"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>
</div>