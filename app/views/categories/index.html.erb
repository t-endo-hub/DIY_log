<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= form_with model: @category, local: true do |f| %>
        <%= f.label :name, "カテゴリー追加" %>
        <br>
        <%= f.text_field :name, class: "form_control" %>
        <%= f.submit "追加", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-lg-8">
      <table>
        <thead>
        <tr>
          <th>カテゴリー名<th>
          <th></th>
          <th><th>
        </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td class="d-block m-3"><%= category.name %></td>
              <td><%= link_to "編集", edit_category_path(category), class:"btn btn-primary" %></td>
              <td><%= link_to "削除", category_path(category), method: :DELETE, class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>