<div class="container">
	<span class="form-title">New post</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<%= form_for(@post) do |f| %>
			<%= attachment_image_tag @post, :image, format:"jpg",
				fallback:"no_image.jpg", class:"post-image-show", id:"preview-image" %>
			<%= f.attachment_field :image, id:"select-image", style:"margin: 10px 0" %><br>
			<%= f.label :tag_list, 'タグ(間にはカンマ , をつけて下さい)'%>
			<%= f.text_field :tag_list, value: @post.tag_list.join(','), class:"form-control",
				placeholder: "豚肉,玉ねぎ,パスタ、、、" %>
		</div>
		<div class="col-lg-6">
			<ul>
              <% @post.errors.full_messages.each do |message| %>
                <div class="bad-flash"><i class="fas fa-exclamation-circle"></i>
                  <%= message %>
              <% end %>
            </ul>
			<p style="border-bottom: 1px solid #F5F5F5; font-size: 20px" >レシピ</p>
			<% if flash[:notice] %>
			 	<div class="bad-flash"><i class="fas fa-exclamation-circle">
			 		<%= flash[:notice]%></i>
			 	</div>
			<% end %>
				<div class="row">
					<div class="col-lg-3">レシピ名</div>
					<div class="col-lg-9"><p><%= f.text_field :title, autocomplete: "off",
							style:"width:80%",placeholder:"レシピ名" %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-3">紹介文</div>
					<div class="col-lg-9"><p><%= f.text_area :content, autocomplete: "off",rows:"3",style:"width:100%",placeholder:"ポイント、特徴など" %></p></div>
				</div>
				<div style="text-align: center;margin: 20px 0">
					<%= f.submit class:"btn btn-warning submit-btn" %>
				</div>
			<% end %>
		</div>
	</div>
</div>