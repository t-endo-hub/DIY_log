<div class="mb-3">
  <span class="font-md">
    <%= link_to user_path(post.user) do %>
      <i class="fas fa-user" style="color: #F96167"></i>
      <span class="font-awesomes"><%= post.user.name %></span>
    <% end %>

    <span class="mr-w">
      <i class="fas fa-comment" style="color: #F96167"></i>
      <span class="font-awesomes"><%= post.comments.count %>ä»¶</span>
    </span>

    <% if user_signed_in? %>
    <span class="like-<%= post.id %>">
      <%= render 'posts/like_text', post: post %>
    </span>
    <% else %>
      <i class="fas fa-heart" style="color: #F96167"></i>
      <span class="font-awesomes"><%= post.likes.count %></span>
    <% end %>
  </span>
</div>