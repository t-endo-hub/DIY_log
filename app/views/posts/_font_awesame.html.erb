<div class="mb-3">
  <span class="font-md">
    <%= link_to user_path(post.user) do %>
      <i class="fas fa-user" style="color: #F96167"></i>
      <span class="font-awesames"><%= post.user.name %></span>
    <% end %>
    <span class="mr-w">
      <%= link_to anchor: "comments" do %>
        <i class="fas fa-comment" style="color: #F96167"></i>
          <span class="font-awesames"><%= post.comments.count %>ä»¶</span>
      <% end %>
    </span>
    <% if user_signed_in? %>
    <span class="like_<%= post.id %>">
      <%= render 'posts/like_text', post: post %>
    </span>
    <% else %>
    <i class="fas fa-heart" style="color: #F96167"></i>
      <span class="font-awesames"><%= post.likes.count %></span>
    <% end %>
  </span>
</div>