  <div class="col-md-4">
    <%= link_to user_path(current_user), class: "no-text-decoration" do %>
      <%= attachment_image_tag current_user,:image, size: "50x50",class: "post-index-icon" %>
      <strong class="black-color"><%= current_user.name %></strong>
    <% end %>

    
      <div  class="border-bottom"><strong>人気のユーザー</strong></div>
      <% popular_user.each do |user| %>
        <div class="row">
          <div class="col-md-8">
            <%= attachment_image_tag user,:image, size: "40x40",class: "post-index-icon" %>
            <strong class="black-color"><%= user.name %></strong>
          </div>
          <div class="col-md-4">
            <%= render 'relationships/follow_btn', user: user%>
          </div>
        </div>
      <% end %>
  </div>
