<div class="col-md-3">
<div class="card popula-user mt-5">
<h5 class="card-header"><strong>人気のユーザー</strong></h5>
      <% popular_user.each do |user| %>
        <div class="row my-3">
          <div class="col-md-8 text-center">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user,:image, size: "40x40",class: "post-index-icon" %>
              <strong class="black-color"><%= user.name %></strong>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
  </div>
