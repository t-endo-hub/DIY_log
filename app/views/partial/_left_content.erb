<nav>
  <ul class="left_nav">
    <li>
      <%= link_to  users_posts_path, class:'nav-item mt-5', id:'menu-post', data: {"turbolinks" => false}  do %>
        <i class="fas fa-share-alt mr-2"></i>最近の投稿
      <% end %>
    </li>
    <li>
      <%= link_to  like_ranking_users_posts_path, class:'nav-item', id:'menu-like-ranking', data: {"turbolinks" => false}  do %>
