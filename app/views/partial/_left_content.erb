      <% end %>
    </li>
    <% if user_signed_in? %>
      <div class="partition"></div>
      <li>
        <%= link_to  users_user_path(current_user), class:'nav-item' do %>
          <i class="fas fa-user mr-2"></i>マイページ
        <% end %>
      </li>
      <li>
        <%= link_to  users_rooms_path, class:'nav-item' do %>
          <i class="fas fa-envelope mr-2"></i>DM
