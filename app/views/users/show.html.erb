<div class="border m-4">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= attachment_image_tag @user,:image, class: "profile_img" %><br>
      <h4><strong><%= @user.name %></strong></h4>
      <%= render '/relationships/follow_btn', user:@user %>
      <%= render 'users/stats', user:@user%>
    </div>
    <div class="col-md-8 mt-4">
      <% if @user == current_user %>
        <%= link_to "プロフィールを編集する",  edit_user_registration_path, class: "btn btn-success" %><br>
        <p class="mt-3"><%= @user.discription %></p>
      <% end %>
    </div>
  </div>

 <% unless @user.id == current_user.id %>
  <% if @is_room == true %>
    <p class="user-show-room"><a href="/rooms/<%= @room_id %>" class="btn btn-primary btn-lg">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, value: @user.id %>
      <% end %>
      <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
    <% end %>
  <% end %>
<% end %>

  <div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-5 m-3">
      <div class="card-wrap">
        <div class="card test">
          <div class="card-header align-items-center d-flex">
            <%= link_to user_path(post.user), class: "no-text-decoration" do %>
              <%= attachment_image_tag post.user,:image,class: "post-profile-icon" %>
            <% end %>
            <%= link_to user_path(post.user), class: "black-color no-text-decoration",
              title: post.user.name do %>
              <strong><%= post.user.name %></strong>
            <% end %>

          </div>
          <%= link_to(post_path(post)) do %>
            <%= attachment_image_tag post ,:image, class: "card-img-top" %>
          <% end %>

          <div class="card-body">
            <div id="like_<%= post.id %>">
              <%= render "/posts/like_text", { post: post } %>
            </div>
            
            <div>
              <span><strong><%= post.user.name %></strong></span>
              <span><%= post.title %></span>
              <%= link_to time_ago_in_words(post.created_at).upcase + "前", post_path(post), class: "post-time no-text-decoration" %>
                          <div id="comment-post-<%= post.id.to_s %>">
                <%= render '/posts/comment_list', { post: post } %>
              </div>
              <%= link_to time_ago_in_words(post.created_at).upcase + "前", post_path(post),
                class: "light-color post-time no-text-decoration" %>
              <hr>
              <div class="row actions" id="comment-form-post-<%= post.id.to_s %>">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>


<% @like_posts.each do |post| %>
  <hr>
  <p><span>ファボツイート内容: </span><%=link_to post.title, post_path(post.id) %></p>
<% end %>