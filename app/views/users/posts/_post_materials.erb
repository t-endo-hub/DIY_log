<% materials.each do |material| %>
	<%= form_for([post,material], url:users_post_materials_path(post) ,remote: true) do |f| %>
		<div class="row pt-1">
			<div class="col-lg-5 col-4">
				<%= f.text_field :name, placeholder:"具材" %>
			</div>
			<div class="col-lg-2 col-2">
				<%= f.text_field :quantity, :size=>"8", placeholder:"分量" %>
			</div>
			<div class="col-lg-3 col-4">
				<%= f.submit "変更", class:"btn btn-warning btn-sm submit-btn-sm" %>
				<%= link_to "削除", users_post_material_path(post, material),
					method: :delete, data: {confirm: "本当に削除してもよろしいですか？"},
					class:"btn btn-danger btn-sm", remote: true %>
			</div>
		</div>
	<% end %>
<% end %>

