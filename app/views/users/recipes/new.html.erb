<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= attachment_image_tag @post,:image, class: "post-image-show", fallback: "no_pic.png" %>
    </div>

    <div class="col-lg-6">
      <h4 class="border-bottom mt-5">作品名</h4><br>
      <%= @post.title %><br>
      <h4 class="border-bottom mt-5">説明</h4>
      <%= @post.content %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <h4 class="border-bottom mt-5 d-inline-block">材料</h4><span class="badge badge-success ml-2">任意</span>
      <div class="post_materials_<%= @post.id %>">
        <%= render 'users/posts/post_materials', materials: @materials, post: @post %>
      </div>

      <%= form_for([@post,@material], url:users_post_materials_path(@post) ,remote: true) do |f| %>
        <div class="row pt-2">
          <div class="col-lg-5 col-4">
            <%= f.text_field :name, placeholder:"材料", class: 'post_materials' %>
          </div>
          <div class="col-2">
            <%= f.text_field :quantity, :size=>"8",placeholder:"数量",class: 'post_materials' %>
          </div>
          <div class="col-lg-3 col-4">
            <%= f.submit "追加", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-lg-6">
      <h4 class="border-bottom mt-5 d-inline-block">使用工具</h4><span class="badge badge-success ml-2">任意</span>
      <div class="post_items_<%= @post.id %>">
        <%= render 'users/posts/post_items', items: @items, post: @post %>
      </div>

      <%= form_for([@post,@item], url:users_post_items_path(@post) ,remote: true) do |f| %>
        <div class="row pt-2">
          <div class="col-lg-5 col-4">
            <%= f.text_field :name, placeholder:"工具", class: 'post_items' %>
          </div>
          <div class="col-lg-3 col-4">
            <%= f.submit "追加", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'users/posts/post_recipe_new', post: @post, recipe: @recipe, recipes: @recipes %>
</div>