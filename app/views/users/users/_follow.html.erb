<div class=container>
  <% if users %>
    <table class="table">
      <thead>
        <th scope="col">画像</th>
        <th scope="col">名前</th>
        <th scope="col"></th>
      </thead>
      <% users.each do |user| %>
        <tbody>
        <tr>
          <td><%= attachment_image_tag user,:image, falllback: "no_image.jpg", size: "40x40", class: "post-index-icon" %>
          <td><%= user.name %> </td>
          <td><%= link_to '詳細', users_user_path(user) %></td>
        </tr>
        </tbody>
      <% end %>
    </table>
  <% else %>
   <p>ユーザーはいません</p>
  <% end %>
</div>