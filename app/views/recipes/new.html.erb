<div class="row">
  <div class="col-md-6">
     <%= image_tag @post.image.to_s, class: "recipe_new" %>
  </div>
  <div class="col-md-6">
    <h3>作品名</h3><br>
    <%= @post.title %><br>
    <h3>説明</h3>
    <%= @post.content %>
  </div>
</div>

<% @recipes.each do |recipe| %>
  <%= recipe.content %><br>
  <% if recipe.image %>
    <%= image_tag recipe.image.to_s %>
  <% end %>
<% end %>

<%= form_for ([@post,@recipe]) do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.file_field :image %>
  <%= f.submit "追加", class: "btn btn-primary" %>
<% end %>

<%= link_to '投稿する', root_path, class: 'btn btn-success' %>