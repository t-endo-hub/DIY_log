<div class="text-center">
  <h4><%= @post.title %></h4>
  <div class="recipe">
  <%= attachment_image_tag @recipe,:image, class: 'recipe_new' %><br>
    <%= @recipe.content %>
  </div>
</div>

<% @recipes.each do |recipe| %>
  <%= link_to post_recipe_path(@post,recipe) do %>
    <%= attachment_image_tag recipe,:image, size: "150x150" %>
  <% end %>
<% end %>

<% if @recipe.previous.present? %>
<%= link_to "PREV", post_recipe_path(@post,@recipe.previous), class: "btn_arrow_back"%>
<% end %>
<% if @recipe.next.present? %>
<%= link_to "NEXT",post_recipe_path(@post,@recipe.next), class: "btn_arrow" %>
<% end %>